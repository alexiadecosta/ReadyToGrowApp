<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/rootRL"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/normalbg"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/tree"
            android:layout_width="match_parent"
            android:layout_height="505dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/treeb"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"

            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"

            android:layout_marginTop="200dp"
            android:layout_height="427dp"
            android:src="@drawable/grass" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:id="@+id/trial"
        android:fontFamily="monospace"
        android:textColor="#FBFBFB"
        android:text="Congratulations, you've earned some money! What will you do with it?"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bottomB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="15dp"
        android:text="Invest in the new, up and coming Highway Project"
        android:fontFamily="monospace"
        android:onClick="onClickT1Bad"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/topB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="90dp"
        android:text="Make a donation to the National Park Foundation"
        android:textSize="18sp"

        android:onClick="onClickT1Good"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />





    <ImageView
        android:id="@+id/heart1"
        android:layout_width="74dp"
        android:layout_height="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart"

        />


    <ImageView
        android:id="@+id/cash1"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="175dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/heartText"
        app:srcCompat="@drawable/money"


        tools:layout_editor_absoluteX="181dp" />

    <TextView
        android:id="@+id/heartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#FBFBFB"
        android:textSize="40sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/heart1"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/cashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="40sp"
        android:textColor="#FBFBFB"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cash1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="14dp" />



</androidx.constraintlayout.widget.ConstraintLayout>