<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/rootRL"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/normalbg"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="200dp"
            android:layout_marginLeft="110dp"
            android:text="You’re broke…
	            But you helped the Earth flourish!
	            Good Job! :))
"
            android:fontFamily="monospace"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="600dp"
            android:layout_height="631dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="-100dp"
            app:srcCompat="@drawable/earth" />

        <ImageView
            android:id="@+id/tree"
            android:layout_width="242dp"
            android:layout_height="332dp"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/treed"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="32dp"

            />

        <ImageView
            android:id="@+id/sunny"
            android:layout_width="143dp"
            android:layout_height="123dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@drawable/happysun" />

        <ImageView
            android:id="@+id/cloudd"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="350dp"
            app:srcCompat="@drawable/smiley_cloud" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="526dp"
            android:layout_height="411dp"
            android:layout_marginTop="-90dp"
            app:srcCompat="@drawable/rainbow"
            tools:layout_editor_absoluteX="-55dp" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>