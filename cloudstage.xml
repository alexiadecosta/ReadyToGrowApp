<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rootRL"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/normalbg"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_marginTop="200dp"
            android:layout_height="427dp"
            android:src="@drawable/grass" />


        <Button
            android:id="@+id/sunnyb"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:fontFamily="monospace"
            android:layout_marginTop="575dp"
            android:layout_marginLeft="100dp"
            android:onClick="onClickThree"
            android:text="☀️"
            android:textSize="100sp"
            app:layout_constraintTop_toBottomOf="@id/parchedtext2" />


        <TextView
            android:id="@+id/parchedtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="315dp"
            android:fontFamily="monospace"
            android:textColor="#FBFBFB"
            android:text="The sapling is feeling gloomy. Give him some sun!"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tree"
            android:layout_width="161dp"
            android:layout_height="143dp"
            app:srcCompat="@drawable/sapling"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="135dp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-52dp"

            />

        <ImageView
            android:id="@+id/cloudy"
            android:layout_width="327dp"
            android:layout_height="341dp"
            app:srcCompat="@drawable/cloud_rain"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="25dp"
            tools:layout_editor_absoluteX="-23dp"
            tools:layout_editor_absoluteY="-114dp"

            />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>